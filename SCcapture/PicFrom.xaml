<UserControl x:Class="SCcapture.PicFrom"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SCcapture"
             mc:Ignorable="d" 
             d:DesignHeight="420.811" d:DesignWidth="568.919" Background="#FF22FF00" ScrollViewer.VerticalScrollBarVisibility="Disabled">
    <Grid>
        <MediaElement x:Name="pic" Margin="0,0,0,0" MediaEnded="Pic_MediaEnded" LoadedBehavior="Manual" UnloadedBehavior="Manual"/>
        <TextBlock x:Name="txtblock" Margin="10,0,0,30" TextWrapping="Wrap" Text="TextBlock" TextAlignment="Center" FontWeight="Bold" VerticalAlignment="Bottom" FontSize="20" Foreground="White"/>
        <MediaElement x:Name="sound" HorizontalAlignment="Left" Height="100" Margin="656,320,0,0" VerticalAlignment="Top" Width="100" Visibility="Hidden" LoadedBehavior="Manual" MediaEnded="Sound_MediaEnded"/>
    </Grid>
</UserControl>
